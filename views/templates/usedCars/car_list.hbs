
<h1>Catalogo Coches Usados</h1>
<aside>
    {{>molecules/slider/slider_used_cars}}
</aside>
<main class="mainUsedCars">
    <section class="carsList">
        {{#each carList}}
        <article class="usedCars_list-cars_article">
            <figure class="usedCars_list-cars_figure"><img src="{{carImage}}" alt=""></figure>
            <ul>    
                <li>Marca: {{carBrand}}</li>
                <li>Modelo: {{carModel}}</li>
                <li>AÃ±o: {{modelYear}}</li>
                <li>Precio de Venta: {{sellingPrice}}</li>
                <li>Motor: {{motorType}}</li>
                <form action="/usedCars/edit/{{_id}}" method="GET">
                    <input type="submit" value="Editar">
                </form>
                <form action="/usedCars/delete/{{_id}}" method="GET">
                    <input type="submit" value="Borrar">
                </form>
                <form action="#" method="GET">
                    <input type="submit" value="Chat">
                </form>
                <form action="/usedCars/details/{{_id}}" method="GET">
                    <input type="submit" value="Detalles">
                </form>
            </ul>
        </article>
        {{/each}}
    </section>
</main>
